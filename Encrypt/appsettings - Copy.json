{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "D:/Logs/SecurePayment/PayPalGateway/v1/PayPalGatewayLog-.log",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": "1048576",
          "rollOnFileSizeLimit": true,
          "buffered": true,
          "flushToDiskInterval": "0.00:00:05",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "retainedFileDurationLimit": "2.00:00:00"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "PayPalGateway"
    }
  },

  // PayPalGateway WebApi settings
  "payPalGatewaySettings": {
    "enableRequestValidation": true,
    "validMarkets": [
      "US",
      "CA"
    ],
    "validPlatforms": [
      "Unknown",
      "Android",
      "iOS",
      "Web"
    ]
  },

  // public-key service client
  "publicKeyServiceClientSettings": {
    "requestTimeoutMs": "5000",
    "baseUrl": "https://sbux-eapi-dev-develop.apigee.net",
    "oauth2": {
      "clientId": "__clientId__",
      "clientSecret": "__clientSecret__"
    },
    "proxySettings": {
      "enableProxy": true,
      "proxyUri": "http://10.255.0.24:8080", // pass-through for https traffic in stage/prod
      "bypassOnLocal": true,
      "bypassList": [
        "10\\.\\d{1,3}\\.\\d{1,3}\\.\\d{1,3}",
        "127.0.0.1",
        "[a-z0-9]+\\.starbucks\\.net$"
      ]
    },
    "urlSettings": {
      "accessToken": "/oauth/client_credential/accesstoken?grant_type=client_credentials",
      "publicKey": "/public-key-lookup-service/keys/{0}"
    }
  },

  // PayPal client
  "payPalClientSettings": {
    "requestTimeoutMs": 4500,
    "baseUrl": "",
    "proxySettings": {
      "enableProxy": true,
      "proxyUri": "http://10.255.0.24:8080", // pass-through for https traffic in stage/prod
      "bypassOnLocal": true,
      "bypassList": [
        "10\\.\\d{1,3}\\.\\d{1,3}\\.\\d{1,3}",
        "127.0.0.1",
        "[a-z0-9]+\\.starbucks\\.net$"
      ]
    },
    "mockSettings": {
      "enableMock": false,
      "mockResponseAverageDelayMs": "0",
      "mockResponseStandardDeviationMs": "0"
    }
  },

  "fraudClientSettings": {
    "requestTimeoutMs": 4500,
    "baseUrl": "https://test8host.openapi.starbucks.com/PayPalFraudData/v1/",
    "proxySettings": {
      "enableProxy": false
    },
    "mockSettings": {
      "enableMock": false
    }
  },

  "Certificates": {
    "Thumprint": "9e7f1d1576e8e61d807359854a2a5fe6113b81f9"
  } 
}
